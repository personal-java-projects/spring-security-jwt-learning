<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.com.com.security.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.com.com.security.pojo.User">
        <selectKey keyProperty="id" resultType="integer" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        insert into sys_user values (#{id}, #{username}, #{password})
    </insert>

    <insert id="insertRoleUser">
        <selectKey keyProperty="userId" resultType="integer" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        insert into role_user values (#{roleId}, #{userId})
    </insert>

    <sql id="selectAllProperties">
        select sys_user.*, sys_role.roleName
        from sys_user
                 inner join role_user on role_user.userId = sys_user.id
                 inner join sys_role on role_user.roleId = sys_role.id
    </sql>
    <select id="selectUserByUsername" parameterType="string" resultType="com.com.com.security.pojo.User">
        <include refid="selectAllProperties"></include>
        <where>
            <if test="username != null">
                username = #{username}
            </if>
        </where>
    </select>
</mapper>